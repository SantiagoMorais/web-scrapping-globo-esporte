{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "extends": "@tsconfig/node22/tsconfig.json",

  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}